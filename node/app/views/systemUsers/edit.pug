extends ../layout/default

block scriptsView
  script(src='/socket.io/socket.io.js')

block content
  h3= title

  div(class="form-group")
    form(name="formSystemUser", method="POST", action="./edit")
      table(class="table", style="border:solid 1px #dee2e6;")
        tbody(class="thead-dark")
          tr
            th メールアドレス
            td 
              if systemUser && systemUser.mailAddress
                input#mail(name="mail" type="text" class="form-control" style="width:500px" value=systemUser.mailAddress) 
              else
  
                input#mail(name="mail" type="text" class="form-control" style="width:500px")
          tr
            th(style="width:200px") 名前
            td
              input#name(name="name" type="text" class="form-control" style="width:300px")
          tr
            th パスワード
            td 
              input#password(name="password" type="password" class="form-control" style="width:300px")
          tr
            th パスワード(確認用)
            td 
              input#passwordCnf(name="passwordCnf" type="password" class="form-control" style="width:300px")
  
      button(type="submit", class="btn btn-primary" style="width:100px") 登録
